@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>EMart</title>
    <!-- Bootstrap core CSS-->
    <link href="~/Assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="~/Assets/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Page level plugin CSS-->
    <link href="~/Assets/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Assets/css/sb-admin.css" rel="stylesheet">
    <!-- Map StyleSheet-->
    <link href="~/Assets/css/Map.css" rel="stylesheet" />
    <style>
        .user-item {
            width: 250px;
            padding: 0;
            font-size: 20px;
        }

        .table-responsive {
            overflow: scroll;
        }

        .input-validation-error {
            border: 1px solid #ff0000;
            background-color: #ffeeee;
        }

        .field-validation-error {
            color: red;
        }
    </style>

</head>
<body class="fixed-nav sticky-footer bg-dark" id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <a class="navbar-brand" href="/ShopManager/Index">EMart Shop Manager Panel</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Dashboard">
                    <a class="nav-link" href="/Customer/Index">
                        @{

                            var ShopManager = Session["ShopManager"] as EMart.Models.User;
                            Session["ShopManagerId"] = ShopManager.UserId;
                        }



                        @*<img class="fa fa-fw fa-user-circle" src="~/ImgRestration/afzal185830648.jpg" height="100" width="200" />*@
                        <div class="row">
                            <img class="fa fa-fw fa-user-circle col-12 col-lg-12 col-md-4 col-sm-4 img-circle img-responsive" src=@Url.Content("~/Pictures/User/" + @Path.GetFileName(ShopManager.UserImageUrl)) height="100" width="100%" />
                        </div>
                    </a>
                </li>
                <li class="nav-item bg-dark" data-toggle="tooltip" data-placement="right" title="Dashboard">
                    <a class="nav-link">

                        <div class="row">
                            <span class="nav-link-text user-item ml-4 col-8 text-white">@ShopManager.FirstName @ShopManager.LastName</span>
                        </div>



                        @*<img class="fa fa-fw fa-user-circle" src="~/ImgRestration/afzal185830648.jpg" height="100" width="200" />*@
                    </a>
                </li>

                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Dashboard">
                    <a class="nav-link" href="/ShopManager/index">
                        <i class="fa fa-fw fa-dashboard"></i>
                        <span class="nav-link-text">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Rides">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#Rides" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-area-chart"></i>
                        <span class="nav-link-text">Order Management</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="Rides">
                        <li>
                            @Html.ActionLink("Orders", "Order", new { id = Session["ShopManagerId"] }, new { @class = "" })
                        </li>
                        <li>

                            @Html.ActionLink("Live Orders", "LiveOrder", new { id = Session["ShopManagerId"] }, new { @class = "" })
                        </li>
                        <li>
                            @Html.ActionLink("Order History", "OrderHistory", new { id = Session["ShopManagerId"] }, new { @class = "" })
                        </li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Payments">
                    <a class="nav-link" href="/ShopManager/Payments/@Session["shopmanagerid"]">
                        <i class="fa fa-fw fa-dashboard"></i>
                        <span class="nav-link-text">Payments</span>
                    </a>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="ProfileSetting">
                    <a class="nav-link" href="/ShopManager/ProfileSetting/@Session["shopmanagerid"]">
                        <i class="fa fa-fw fa-table"></i>
                        <span class="nav-link-text">Profile Setting</span>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav sidenav-toggler">
                <li class="nav-item">
                    <a class="nav-link text-center" id="sidenavToggler">
                        <i class="fa fa-fw fa-angle-left"></i>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <form class="form-inline my-2 my-lg-0 mr-lg-2">
                        <div class="input-group">
                            <input class="form-control" type="text" placeholder="Search for...">
                            <span class="input-group-append">
                                <button class="btn btn-info" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </form>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="modal" data-target="#exampleModal">
                        <i class="fa fa-fw fa-sign-out"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            @RenderBody()
        </div>
    </div>

    <!-- /.container-fluid-->
    <!-- /.content-wrapper-->
    <footer class="sticky-footer">
        <div class="container">
            <div class="text-center">
                <small>Copyright © EMart @DateTime.Now.Year</small>
            </div>
        </div>
    </footer>
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fa fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    @Html.ActionLink("Logout", "Logout", "Registeration", new { id = 1 }, new { @Class = "btn btn-primary" })
                    @*<a class="btn btn-primary" href="login.html">Logout</a>*@
                </div>
            </div>
        </div>
    </div>






    <!-- Bootstrap core JavaScript-->
    <script src="~/Assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Assets/vendor/jquery-easing/jquery.easing.min.js"></script>

    <script src="~/Assets/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Assets/vendor/datatables/dataTables.bootstrap4.js"></script>
    <!-- Custom scripts for this page-->
    <script src="~/Assets/js/sb-admin-datatables.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Assets/js/sb-admin.min.js"></script>
    <script src="~/Assets/Table/jquery.doubleScroll.js"></script>
    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>


