@model EMart.Models.User

@{
    Layout = "~/Views/Shared/_Registeration_Layout.cshtml";
}
@{
    int LoginData = int.Parse(Session["LoginId"].ToString());
}
<div class="container">
    <p></p>
    <div class="card card-login mx-auto mt-5 bg-dark text-white" style="opacity:0.8">
        <div class="card-header">Login</div>
        <div class="card-body">

            @using (Html.BeginForm())
            {
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserEmail, "Enter Email")
                        @Html.TextBoxFor(model => model.UserEmail, new { @class = "form-control", placeholder = "john@mail.com" })
                        @Html.ValidationMessageFor(model => model.UserEmail)


                    </div>
                     <div class="form-group">
                        @Html.LabelFor(model => model.UserPassword, "Password")
                        @Html.TextBoxFor(model => model.UserPassword, new { @class = "form-control", placeholder = "Enter Password", id = "exampleInputPassword1", type = "Password", @minlength = "6" })
                        @Html.ValidationMessageFor(model => model.UserPassword)
                    </div>

               

                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox"> Remember Password
                        </label>
                    </div>
                </div>
                @Html.AntiForgeryToken()
                <input id="Submit1" type="submit" value="Login" />
                if (TempData["message"] != null)
                {
                    <p class="alert alert-danger">@TempData["message"]</p>
                }

                @*<a class="btn btn-primary btn-block">Login</a>*@
            }
            <div class="text-center">
                @if (LoginData != 1)
                {
                    <a href="@Url.Action("CustomerRegister", "Registeration", new { Id = Session["LoginId"] })"><i class='fa fa-user'></i><span class="text-white font-weight-bold">Register an Account</span></a>
                    @*<a class="d-block small mt-3" href="register.html">Register an Account</a>*@
                    <br />
                }
                <a href="@Url.Action("ForgetPassword", "Registeration", new { Id =Session["LoginId"] })"><span class="text-white font-weight-bold">Forgot Password?</span></a>
                @*<a class="d-block small" href="forgot-password.html">Forgot Password?</a>*@
            </div>
        </div>
    </div>
</div>